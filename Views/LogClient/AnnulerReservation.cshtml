@model IEnumerable<SiteVol.Models.Reservation>
@{
    ViewBag.Title = "AnnulerReservation";
    Layout = "~/Views/Shared/_Layout.cshtml";

    string[] tabHeads = new string[]{"ID"
      ,"ID de VOL"
      ,"User Name"
      ,"CIN"
      ,"Nom"
      ,"Prenom"
      ,"Destination"
      ,"Date de depart"
      ,"Prix"
      ,"Nombre de places"
      ,"Compagnie" };
    
}
<style>
    th {
        background-color: #0094ff;
        color: white;
    }
    tr:nth-child(even) {
        background-color: #f2f2f2;
    }
</style>

<h2>Annuler Votre Reservation </h2>


<br />

<div class="table">
    <table class="table table table-bordered table-hover">
        <thead>
            <tr>
                @{
                    foreach (var head in tabHeads)
                    {
                        <th>
                            @{
                                @head

                            }
                        </th>

                    }
                }

            </tr>

        </thead>
        <tbody>
            @{
                if (Model != null)
                {
                    foreach (var data in Model)
                    {
                        <tr>
                            <td>@data.ID </td>
                            <td> @data.id_vol </td>
                            <td> @data.username </td>
                            <td> @data.CIN </td>
                            <td> @data.nom </td>
                            <td> @data.prenom </td>
                            <td> @data.destination </td>
                            <td> @data.date_depart </td>
                            <td> @data.prix </td>
                            <td> @data.nb_place </td>
                            <td> @data.compagnie </td>

                            <td>
                                <div class="input-group-btn">
                                    <button type="button" class="btn btn-danger" onclick="location.href='@Url.Action("Delete", "LogClient", new { ID = data.ID, name=data.username })'"> Annuler </button>

                                </div>
                            </td>
                        </tr>

                    }
                }
            }

        </tbody>

    </table>


</div>